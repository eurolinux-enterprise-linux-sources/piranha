Signed-off-by: Ryan O'Hara <rohara@redhat.com>
---
 web/web/secure/virtual_main.php |   14 +++++++-------
 1 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/web/web/secure/virtual_main.php b/web/web/secure/virtual_main.php
index cc164a5..421c28c 100644
--- a/web/web/secure/virtual_main.php
+++ b/web/web/secure/virtual_main.php
@@ -171,9 +171,9 @@ A.logolink      {
 		echo "<TD><INPUT TYPE=HIDDEN 	NAME=name		SIZE=16	COLS=10	VALUE="	. $virt[$loop1]['virtual']	. ">";
 		echo $virt[$loop1]['virtual']	. "</TD>";
 
-		$temp = explode(" ", $virt[$loop1]['address']);
-		echo "<TD><INPUT TYPE=HIDDEN 	NAME=address		SIZE=16	COLS=10	VALUE="	. $temp[0]	. ">";
-		echo $temp[0]	. "</TD>";
+		$addr = explode(" ", $virt[$loop1]['address']);
+		echo "<TD><INPUT TYPE=HIDDEN 	NAME=address		SIZE=16	COLS=10	VALUE="	. $addr[0]	. ">";
+		echo $addr[0]	. "</TD>";
 
 		if (isset($virt[$loop1]['vip_nmask'])) {
 			$temp = $virt[$loop1]['vip_nmask'];
@@ -214,12 +214,12 @@ A.logolink      {
 		echo $virt[$loop1]['protocol'];
 		echo "</TD>";
 			
-		if (! isset($temp[1])) {
-			$temp[1] = "";
+		if (!isset($addr[1])) {
+			$addr[1] = "";
 		}
 		
-		echo "<TD><INPUT TYPE=HIDDEN 	NAME=interface	SIZE=16	COLS=10	VALUE="	. $temp[1]	. ">";
-		echo $temp[1]	. "</TD>";
+		echo "<TD><INPUT TYPE=HIDDEN 	NAME=interface	SIZE=16	COLS=10	VALUE="	. $addr[1]	. ">";
+		echo $addr[1]	. "</TD>";
 		echo "</TR>";
 		$loop1++;
 	}
